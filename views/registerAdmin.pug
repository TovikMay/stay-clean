extends layout
block content
    header.card-header
        h4.card-title REGISTER ADMIN
    form(method="POST" action='/register')
        div.form-row
            div.col.form-group
                label First name 
                input.form-control(name="firstname")
            div.col.form-group
                label Last name
                input.form-control(name="lastname")
            div.col.form-group
                label Enter email
                input.form-control(name="enteremail")
        div.form-row
            div.col.form-group
                label Create Password
                input.form-control(type="password" name="password")
        div.form-row
            div.col.form-group
                button.btn.btn-primary.btn-block Register
        div.form-row
            div.col.form-group
            div.pull-right
                a(class='button', href='/stayclean/stayclean') StayClean
        