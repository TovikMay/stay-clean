doctype html 
html 
  head 
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl", crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheet/order.css")
  body
    .row.justify-content-center 
            .col-md-6
                .card-body 
                    header.card-header
                        h4.card-title CREATE ORDER 
                    form(method="POST" action='/order')
                        div.form-row
                            div.col.form-group
                                label First name 
                                input.form-control(name="firstname")
                            div.col.form-group
                                label Last name
                                input.form-control(name="lastname")
                            div.col.form-group.mb-3
                                label User name
                                input.form-control(name="username")
                            div.row
                                div.col-md-4
                                    select.form-select(aria-label='Default select example')
                                        option(selected='') Services requested
                                        option(value='1') Garbage truck
                                        option(value='2') Sewage truck
                                div.col-md-4
                                    select.form-select(aria-label='Default select example')
                                        option(selected='') Driver Allocated
                                        option(value='1') Driver
                                        option(value='2') Conductor
                                div.col-md-4.mb-2
                                    select.form-select(aria-label='Default select example')
                                        option(selected='') Location
                                        option(value='1') Kampala
                                        option(value='2') Mukono
                                        option(value='2') Kawempe
                            div.row
                            div.col-lg-12
                                label.form-label(for='validationCustomUsername') Truck Registration Number
                                input.form-control(name="number")
                        div.form-row
                            div.col.form-group
                                button.btn.btn-primary.btn-block Submit
                        div.form-row
                            div.col.form-group
                                a(href='/order') Stayclean
                            div.pull-right
                                a(class='button', href='/') Home Page
